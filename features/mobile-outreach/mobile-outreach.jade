include ../../includes/head.jade

body.feature(ng-app='Glider', ng-controller='LSD')

  .main-header.employer.menu-minimized
    include ../../includes/header.jade

  section#feature-cover
      .feature-header.flex-justify-center(scroll id="page" ng-class="{'feature-header-fixed':boolChangeClass}")
        .container
          a.prev.white(href="/features/outb-recrouiting/outb-recrouiting.html") Outbound recruiting
          h1.white.center Mobile Friendly Outreach
          a.next.white(href="/features/parsing/parsing.html") Resume parsing
        
      
  .content-wrapper
    .container
      .content
        .feature-section()
          h2.center(style="padding: 70px 30px;") Reach people on the go.
    
        .feature-section(style="height: 600px;")
          .container.image-at-left.features-container
            .side-wrapper
              .side-content
                h2 Mobile friendly company profile
                p.sub Want to tap on-the-go hard-to-reach millennial talent? Go ahead and easily create a mobile-friendly company profile that has rich details about your company, management team, benefits and others. Make your company profile engaging by adding pictures, videos and links to your social pages on facebook, twitter and others.   
            .image.image-center
              img(src="../../files/features/image.png" style="left: -2em; height: 350px;")
              
        .feature-section(style="height: 600px;")
          .container.reverse.features-container
            .side-wrapper
              .side-content
                h2 Mobile friendly job descriptions
                p.sub Want to create job descriptions that look great on a desktop and awesome on the mobile? Do so with  Glider and watch a continuous live preview on a mobile simulator.  
            .image.image-center
              img(src="../../files/features/image.png" style="right: 0; height: 350px;")
      
  section#feature-bottom
    .container
      a.prev.white(href="/features/outb-recrouiting/outb-recrouiting.html") Outbound recruiting
      .divider
      a.next.white(href="/features/parsing/parsing.html") Resume parsing    
      
include ../../includes/footer.jade
