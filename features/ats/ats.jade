body.feature(ng-app='Glider', ng-controller='LSD')

  .main-header.employer.menu-minimized
    include ../../includes/header.jade

  section#feature-cover
      .feature-header.flex-justify-center(scroll id="page" ng-class="{'feature-header-fixed':boolChangeClass}")
        .container
          a.prev.white(href="/features/pl-detect/pl-detect.html") Plagiarism detection
          h1.white.center ATS integration
          a.next.white(href="/features/v-interview/v-interview.html") Video interviews
        
      
  .content-wrapper
    .container
      .content
        .feature-section()
          h2.center(style="padding: 70px 30px;") Integrate Glider with your ATS
    
        .feature-section(style="background: rgba(0,0,0,0.04); height: 450px;")
          .container.image-at-left.features-container
            .side-wrapper
              .side-content
                h2 ATS integration
                p.sub What if you have your own application tracking system (ATS) and would like to use only the assessments from Glider? Glider is built in a flexible and modular manner and that enables the assessments to be used with Glider or integrated with an ATS.    
            .image.image-center
              img(src="../../files/features/image.png" style="left: -2em; height: 350px;")
              
